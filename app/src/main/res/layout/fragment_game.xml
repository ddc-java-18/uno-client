<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".controller.GameFragment">

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/current_players_in_game"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/players_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
    android:id="@+id/players_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/players"
    app:layout_constraintTop_toBottomOf="@id/current_players_in_game"
    app:layout_constraintBottom_toTopOf="@id/hand_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


  <TextView
    android:id="@+id/hand_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/hand"
    android:textSize="24sp"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@id/current_players_in_game"
    app:layout_constraintBottom_toTopOf="@id/recycler_view_hand"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_view_hand"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"
    app:layout_constraintTop_toBottomOf="@id/hand_title"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>